<h3>タスク一覧</h3>
<table class="table table-striped">
  <thead>
    <tr>
      <th>タスク名</th>
    </tr>
  </thead>
  <tbody >
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= link_to  "編集", edit_task_path(task), class: "btn btn-warning" %></td>
        <td><%= link_to  "削除", task_path(task), method: :delete, class: "btn btn-danger" %>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to '追加', new_task_path, class: "btn btn-primary" %>
